<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="countryFlag">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="continentListLabel">
        <item name="android:text">@string/mainpage_banner</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#3A5684</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="continentList">
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:entries">@array/list_continents</item>
    </style>

    <style name="countryDetailText">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">#3A5684</item>
        <item name="android:textSize">12pt</item>
    </style>
</resources>
